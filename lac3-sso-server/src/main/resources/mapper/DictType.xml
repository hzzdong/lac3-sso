<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.linkallcloud.sso.server.dao.IDictTypeDao">

	<!-- 通用查询结果列 -->
	<sql id="Base_Column_List">
		u.id,u.uuid,u.status,u.createTime,u.updateTime,u.code,u.parentId,u.topParentId,u.govCode,u.name,u.sort,u.level,u.remark
	</sql>
	
	<sql id="Column_with_parent">
		u.id,u.uuid,u.status,u.createTime,u.updateTime,u.code,u.parentId,u.topParentId,u.govCode,u.name,u.sort,u.level,u.remark,
		p.name as parentName
	</sql>
	
	<select id="fetchByGovCode" resultType="com.linkallcloud.sso.domain.DictType" >
		select
			<include refid="Column_with_parent" />
		from 
			dj_dict_type u left join dj_dict_type p on u.parentId=p.id 
		where 
			u.govCode=#{govCode}
	</select>
	
	<select id="fetchById" resultType="com.linkallcloud.sso.domain.DictType" parameterType="java.lang.Long">
		select
			<include refid="Column_with_parent" />
		from 
			dj_dict_type u left join dj_dict_type p on u.parentId=p.id 
		where 
			u.id=#{id}
	</select>
	
	<select id="fetchByIdUuid" resultType="com.linkallcloud.sso.domain.DictType">
		SELECT
			<include refid="Column_with_parent" />
		FROM
			dj_dict_type u left join dj_dict_type p on u.parentId=p.id 
		WHERE
			u.id = #{id} and u.uuid=#{uuid} and u.status &lt;&gt; 9
	</select>
	
	<select id="findByIds" resultType="com.linkallcloud.sso.domain.DictType" parameterType="java.lang.Long">
		select
			<include refid="Base_Column_List" />
		from dj_dict_type u 
		where u.status &lt;&gt; 9 and  u.id in
			<foreach item="id" index="index" collection="ids" open="(" separator="," close=")">
				#{id}
			</foreach>
	</select>
	
	<select id="find" resultType="com.linkallcloud.sso.domain.DictType">
		SELECT
			<include refid="Base_Column_List" />
		FROM
			dj_dict_type u
		WHERE
			u.status &lt;&gt; 9 
		    <if test="query!=null and query.cnds!=null and query.cnds.name != null"> AND u.name like #{query.cnds.name}</if>
			<if test="query!=null and query.cnds!=null and query.cnds.status != null"> AND u.status = #{query.cnds.status}</if>
			<if test="query!=null and query.cnds!=null and query.cnds.govCode != null"> AND u.govCode = #{query.cnds.govCode}</if>
		<choose>
			<when test="query != null and query.orders != null and query.orders.length > 0">
				order by <foreach item="ord" index="index" collection="query.orders" separator=","> u.${ord} </foreach>
			</when>
			<otherwise>
				order by u.parentId,u.sort
			</otherwise>
		</choose>
	</select>
	
	<select id="getChildrenByTopParentId" resultType="com.linkallcloud.sso.domain.DictType">
		SELECT
			<include refid="Base_Column_List" />
		FROM
			dj_dict_type u
		WHERE
			u.status &lt;&gt; 9 AND u.topParentId = #{topParentId}
	</select>
	
	<insert id="insert" parameterType="com.linkallcloud.sso.domain.DictType" useGeneratedKeys="true" keyProperty="entity.id">
		insert into dj_dict_type
			(uuid, status,createTime,updateTime,code,parentId,topParentId,govCode,name,sort,level,remark)
		values(#{entity.uuid},#{entity.status},now(),now(),#{entity.code},#{entity.parentId},#{entity.topParentId},#{entity.govCode},#{entity.name},#{entity.sort},#{entity.level},#{entity.remark})
	</insert>
	
	<update id="update">
		update 
			dj_dict_type 
		set 
			name=#{entity.name},sort=#{entity.sort},level=#{entity.level},remark=#{entity.remark}
			<if test="entity.status != null"> ,status=#{entity.status}</if>
			,updateTime=now()
		where 
			id=#{entity.id} and uuid=#{entity.uuid}
	</update>
	
	<delete id="delete">
		update 
			dj_dict_type 
		set
			status=9,updateTime=now()
		where
			id=#{id} and uuid=#{uuid}
	</delete>
	
	<update id="updateCode">
		update dj_dict_type set code=#{code},updateTime=now() where id=#{id}
	</update>
	
</mapper>